<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sandilemazibuko.groovappbeta.Login"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#19181d">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="9.64"
        card_view:cardBackgroundColor="#232228"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="9.64"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="192dp"
                android:id="@+id/imageView2"
                android:src="@drawable/groovapp_logo" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txtRecoverEmail"
                android:drawableLeft="@drawable/ic_account_box_white_24dp"
                android:drawablePadding="12dp"
                android:hint="Email Address"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="12dp"

                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtpasswordRecover"
                android:background="@drawable/bg_edittext"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:drawablePadding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:hint="Password"
                android:layout_marginBottom="12dp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtpasswordRecoverConfirm"
                android:background="@drawable/bg_edittext"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:drawablePadding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:hint="Re-Type Password"
                android:layout_marginBottom="12dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:text="Reset Password"
                android:id="@+id/btnResetPassword"
                android:background="@drawable/groovapp_button"
                android:layout_marginBottom="12dp"
                android:textColor="#fff" />

        </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>
