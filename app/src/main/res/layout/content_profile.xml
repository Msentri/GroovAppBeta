<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:showIn="@layout/app_bar_profile"
tools:context="com.example.sandilemazibuko.groovappbeta.Profile"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#232228">

<ImageView
    android:layout_width="150dp"
    android:layout_height="192dp"
    android:id="@+id/imageView2"
    android:src="@drawable/groovapp_logo" />

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="View Restaurants on Map"
    android:id="@+id/myMapButton"
    android:background="@drawable/groovapp_button"
    android:layout_marginBottom="12dp"
    android:textColor="#fff"
    />

</LinearLayout>

