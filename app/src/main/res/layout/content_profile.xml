<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
android:layout_height="fill_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:showIn="@layout/app_bar_profile"
tools:context="com.example.sandilemazibuko.groovappbeta.Profile"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#232228">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_buttons"
        >

        <com.mapbox.mapboxsdk.views.MapView
            android:id="@+id/mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            mapbox:access_token="pk.eyJ1IjoibXNlbnRyaSIsImEiOiJjaWdpOHoxMmg4NW1rdXFtMm14ZHN5aDdyIn0.MnZ_4gAK9h1zQLBwkeV1zA"></com.mapbox.mapboxsdk.views.MapView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/home_buttons"
        >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000"

            >

            <TableRow

                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/btnFilter"
                    android:src="@drawable/first_home" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageUber"
                    android:src="@drawable/send_home" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imgHome"
                    android:src="@drawable/main_home" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageDrinks"
                    android:src="@drawable/third_home" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageSearch"
                    android:src="@drawable/fourth_home" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>

